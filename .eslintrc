{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8
  },
  "rules": {
    "no-console": "off",
    "camelcase": "error",
    "eqeqeq": [
      "error",
      "smart"
    ],
    "no-implicit-globals": "error",
    "no-unused-expressions": "error",
    "no-var": "error",
    "prefer-const": "error",
    "strict": "error"
  }
}